{{yield}}

<div class="container">
  <h2>Senate</h2>
  {{#each senate as |senator|}}
    <div class="triplet" style="height: 300px; text-align: center">
      {{#link-to 'representative.show' senator.id}}
        <img style="max-width: 100%; max-height: 75%;" src="{{senator._data.imageUrl}}">
        <p>{{senator._data.firstName}} {{senator._data.lastName}}</p>
      {{/link-to}}
    </div>
  {{/each}}
  <div class="clear"></div>

  <h2>House</h2>
  {{#each house as |rep|}}
    <div class="triplet" style="height: 300px; text-align: center">
      {{#link-to 'representative.show' rep.id}}
        <img style="max-width: 100%; max-height: 75%;" src="{{rep._data.imageUrl}}">
        <p>{{rep._data.firstName}} {{rep._data.lastName}}</p>
      {{/link-to}}
    </div>
  {{/each}}
  <div class="clear"></div>
</div>
